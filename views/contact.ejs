<%- contentFor('body') %>

<div class="container">
  <h1 class="mb-3">This is Contact Page</h1>
  <a class="btn btn-success" href="contact/add" role="button">Add Contact</a>
  <% if (cont.length < 1) { %>
  <p class="mt-3">Data kontak kosong</p>
  <% } else { %>
  <table class="table mt-3">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Phone Number</th>
        <th scope="col">Email Address</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <% cont.forEach(contact => { %>
    <tbody>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.email %></td>
        <td class="d-flex gap-2">
          <a
            class="btn btn-primary"
            href="contact/detail/<%= contact.name %>"
            role="button"
            >Detail</a
          >
          <a
            class="btn btn-warning"
            href="contact/edit/<%= contact.name %>"
            role="button"
            >Edit</a
          >
          <form action="/delete" method="post">
            <input
              type="hidden"
              id="delete"
              name="delete"
              value="<%= contact.name %>"
            />
            <button class="btn btn-danger" type="submit">Delete</button>
          </form>
        </td>
      </tr>
      <% })} %>
    </tbody>
  </table>
</div>
